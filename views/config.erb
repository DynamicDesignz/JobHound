<div class="mdl-grid">
	<div class="mdl-cell mdl-cell--2-col"></div>
	<div class="mdl-cell mdl-cell--8-col">
		<form class="configForm text-center" method="post">
			<% if params[:config] %>
				<strong>Saved Config.</strong><br>
			<% end %>
			<button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" type="submit">
			  Save Config
			</button>
			<pre><textarea class="configTextArea font-14" autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" name="config"><%= File.read('./config/jobhound.config') %></textarea></pre>
		</form>
	</div>
</div>